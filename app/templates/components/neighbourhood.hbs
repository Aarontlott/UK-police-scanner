{{yield}}

<div class="row section">
	{{#each this.data as |neighbourhood|}}
		<div class="card m-1" style="width: 18rem;">
			<div class="card-header">
				<h3 class="card-title">{{neighbourhood.name}}</h3>
			</div>
			<div class="card-body">
				<p class="card-text">{{neighbourhood.description}}</p>
			</div>
		  <div class="card-footer">
		    <a href="./neighbourhood/specific-force/{{neighbourhood.id}}" class="card-link btn btn-primary">View Events</a>
		  </div>
		</div>
	{{/each}}
</div>